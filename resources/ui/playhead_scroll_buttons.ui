<interface>
  <requires lib="gtk+" version="3.20"/>
  <template class="PlayheadScrollButtonsWidget" parent="GtkButtonBox">
    <property name="visible">True</property>
    <property name="can_focus">False</property>
    <property name="spacing">1</property>
    <property name="layout_style">expand</property>
    <child>
      <object class="GtkToggleButton" id="scroll_edges">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">True</property>
        <property name="action_name">win.timeline-playhead-scroll-edges</property>
        <property name="tooltip-text"
          translatable="yes">Scroll when playhead reaches the edge</property>
        <child>
          <object class="GtkImage">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="icon-name">measure</property>
          </object>
        </child>
      </object>
      <packing>
        <property name="expand">True</property>
        <property name="fill">True</property>
        <property name="position">0</property>
      </packing>
    </child>
    <child>
      <object class="GtkToggleButton" id="follow">
        <property name="visible">True</property>
        <property name="can_focus">True</property>
        <property name="receives_default">True</property>
        <property name="action_name">win.timeline-playhead-follow</property>
        <property name="tooltip-text"
          translatable="yes">Follow playhead</property>
        <child>
          <object class="GtkImage">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="icon-name">auto-scroll-playhead</property>
          </object>
        </child>
      </object>
      <packing>
        <property name="expand">True</property>
        <property name="fill">True</property>
        <property name="position">1</property>
      </packing>
    </child>
  </template>
</interface>
